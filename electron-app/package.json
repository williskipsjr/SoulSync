{
  "name": "soulsync-electron",
  "version": "1.0.0",
  "description": "SoulSync - Empathetic AI Mental Health Companion",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"next dev\" \"electron .\"",
    "build": "next build",
    "start": "electron .",
    "electron:build": "electron-builder"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.6.0",
    "next": "^14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0"
  },
  "build": {
    "appId": "com.soulsync.app",
    "productName": "SoulSync",
    "directories": {
      "output": "dist"
